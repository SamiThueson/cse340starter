<div class="account">
<% if (title) { %>
  <h1><%= title %></h1>
  <% } else {
    res.redirect('/')
  } %>

<%- messages() %>
<% if (errors) { %>
  <ul class="notice">
 <% errors.array().forEach(error => { %>
   <li><%= error.msg %></li>
<%  }) %>
 </ul>
<% } %>

<form id="addInvForm" action="/inv/add-inventory" method="post">
  <div class="newItems">
  <p>All fields are required.</p>
  <fieldset>
      <label for="class">Classification</label><br>
      <select id="class" name="classification_id" required><%- option %></select><br>
      <label for="make">Make</label><br>
      <input type="text" id="make" name="inv_make" placeholder="Min of 3 characters" required value="<%= locals.inv_make %>"><br>
      <label for="model">Model</label><br>
      <input type="text" id="model" name="inv_model" placeholder="Min of 3 characters" required value="<%= locals.inv_model %>"><br>
      <label for="description">Description</label><br>
      <textarea id="description" name="inv_description" placeholder="Brief description of the car" rows="10" cols="30" required></textarea><br>
      <label for="imgpath">Image Path</label><br>
      <input type="text" id="imgpath" name="inv_image" required value="/images/vehicles/no-image.png"><br>
      <label for="thumbnail">Thumbnail Path</label><br>
      <input type="text" id="thumbnail" name="inv_thumbnail" required value="/images/vehicles/no-image.png"><br>
      <label for="price">Price</label><br>
      <input type="text" id="price" name="inv_price" placeholder="Decimal or integer" required value="<%= locals.inv_price %>"><br>
      <label for="year">Year</label><br>
      <input type="text" id="year" name="inv_year" pattern="\d{4}" placeholder="4-digit year" required value="<%= locals.inv_year %>"><br>
      <label for="miles">Miles</label><br>
      <input type="number" id="miles" name="inv_miles" placeholder="Digits only" required value="<%= locals.inv_miles %>"><br>
      <label for="color">Color</label><br>
      <input type="text" id="color" name="inv_color" placeholder="i.e. Khaki Blue" required value="<%= locals.inv_color %>"><br>
      <input type="submit" value="Add Vehicle">
    </fieldset>
  </div>
</form>
</div>
