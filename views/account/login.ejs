<div class="account">
  <% if (title) { %>
    <h1><%= title %></h1>
    <% } else {
      res.redirect('/')
    } %>
    
  <span><%- messages() %></span>
  <% if (errors) { %>
    <ul class="notice">
   <% errors.array().forEach(error => { %>
     <li><%= error.msg %></li>
  <%  }) %>
   </ul>
  <% } %>

  <form id="loginForm" action="/account/login" method="post"> 
    <div class="newItems">
      <fieldset>
        <label for="email">Email:</label><br>
        <input type="email" id="email" name="account_email" required value="<%= locals.account_email %>"><br>
        <label for="password">Password:</label><br>
        <input type="password" id="password" name="account_password" required pattern="^(?=.*\d)(?=.*[a-z])(?=.*[A-Z])(?=.*[^a-zA-Z0-9])(?!.*\s).{12,}$"><br>
        <input type="submit" value="Login"><br>
        <p>No account? <a href="/account/register">Sign-up</a></p>
      </fieldset>
    </div>
  </form>
</div>